# =============================================================
# Loriaa AI Backend - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================

# ── Database ───────────────────────────────────────────────────
DATABASE_URL=postgresql://loriaa_user:loriaa_pass@localhost:5432/loriaa_db
REDIS_URL=redis://localhost:6379/0
# DB_PORT=5433  # Uncomment if local PostgreSQL is on 5432

# ── Security ──────────────────────────────────────────────────
SECRET_KEY=change-this-to-a-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ── AI / LLM ─────────────────────────────────────────────────
# Google Gemini (core agent LLM)
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI (ChatGPT ad copy generation + embeddings)
OPENAI_API_KEY=

# ── VAPI Voice ────────────────────────────────────────────────
# Sign up at https://vapi.ai to get your API key
VAPI_API_KEY=
VAPI_WEBHOOK_SECRET=
VAPI_BASE_URL=https://api.vapi.ai

# ElevenLabs (premium voices, optional)
ELEVENLABS_API_KEY=

# ── Facebook Marketing ────────────────────────────────────────
# Create an app at https://developers.facebook.com/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_WEBHOOK_VERIFY_TOKEN=
FACEBOOK_AD_ACCOUNT_ID=   # e.g., act_123456789

# ── Google Ads ────────────────────────────────────────────────
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# ── Twilio (SMS) ─────────────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ── ResMan PMS ────────────────────────────────────────────────
RESMAN_API_KEY=
RESMAN_INTEGRATION_PARTNER_ID=
RESMAN_BASE_URL=https://api.resman.com

# ── Email (SendGrid) ─────────────────────────────────────────
SENDGRID_API_KEY=
FROM_EMAIL=noreply@loriaa.ai

# ── CORS ──────────────────────────────────────────────────────
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ── GCP ───────────────────────────────────────────────────────
GCP_PROJECT_ID=
GCP_REGION=us-central1
CLOUD_STORAGE_BUCKET=

# ── Monitoring ────────────────────────────────────────────────
SENTRY_DSN=

# ── Environment ───────────────────────────────────────────────
ENVIRONMENT=development
